{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": false,
		"moduleResolution": "Node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": false,
		"noEmit": true,
		"lib": [
			"DOM",
			"ES5",
			"ES6",
			"ES7"
		],
		"jsx": "react-jsx",
		"strict": false,
		"declaration": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
	},
	"include": [
		"**/*.ts",
		"**/*.module.less"
	],
}
